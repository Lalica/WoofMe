@model WoofMe.Models.DogModels.FullDogInfoModel

<html>
<head>
    <meta charset="utf-8" />
    <title>
        @{
            ViewData["Title"] = "Dogs looking for home";
        }
    </title>
</head>
<body>
<h4></h4>
<img src="~/images/@Model.Picture" style="object-fit: cover; border-radius: 3%" height="700"/>
<div>
    <h4><label asp-for="Name" class="col-sm-2"></label></h4>
    <h4><strong>@Model.Name</strong></h4>
</div>
<div>
    <h4><label asp-for="Age" class="col-sm-2"></label></h4>
    <h4>@Model.Age (Birthdate: @Model.BirthDate.Split()[0])</h4>
</div>
<div>
    <h4><label asp-for="Gender" class="col-sm-2"></label></h4>
    <h4>@Model.Gender</h4>
</div>
<div>
    <h4><label asp-for="Race" class="col-sm-2"></label></h4>
    <h4>@Model.Race</h4>

</div>
<div>
    <h4><label asp-for="Info" class="col-sm-2"></label></h4>
    <h4>@Model.Info</h4>
</div>
</body>
</html>