@using WoofMe.Classes
@model WoofMe.Models.DogModels.EditDogModel

<html>
<head>
    <meta charset="utf-8" />
    <title>
        @{
            ViewData["Title"] = "Edit Dog";
        }
    </title>
</head>
<body>
    <h2><strong>Edit Dog</strong></h2>
    <form asp-controller="Dogs" asp-action="Edit" method="post" class="form-horizontal" enctype="multipart/form-data">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Race" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Race">
                    <option value="@Model.Race">Unchanged</option>
                    @foreach (string b in Breeds.AllBreeds())
                    {
                        <option value=@b>@b</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BirthDate" type="date" />
                <span asp-validation-for="BirthDate"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Gender" type="radio" value="0" /> Male
                <input asp-for="Gender" type="radio" value="1" /> Female
                <span asp-validation-for="Gender"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Size" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Size" type="radio" value="0" /> Small
                <input asp-for="Size" type="radio" value="1" /> Medium
                <input asp-for="Size" type="radio" value="2" /> Big
                <span asp-validation-for="Size"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lenght" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Lenght" type="radio" value="0" /> Short
                <input asp-for="Lenght" type="radio" value="1" /> Medium
                <input asp-for="Lenght" type="radio" value="2" /> Long
                <span asp-validation-for="Lenght"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HasHome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HasHome" class="checkbox"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Info" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewPicture" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewPicture" type="file" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Picture" class="text-hide"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Apply</button>
            </div>
        </div>
    </form>
    <div>
    </div>
</body>
</html>
